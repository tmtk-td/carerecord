<h1><%= Date.current.strftime('%Y年 %m月 %d日') %></h1>
<h1>利用者様一覧</h1>

<table>
  <tr>
    <th>お名前</th>
    <th>性別</th>
    <th>誕生日</th>
    <th>年齢</th>
  </tr>
<% @clients.each do |client| %>
  <tr>
    <td><%= client.name %>様</td>
    <td><%= client.sex %></td>
    <td><%= client.born_on %></td>
    <td><%= client.age %></td>
    <td><%= link_to '詳細確認', client_path(client.id) %></td>
    <td><%= link_to "編集する", edit_client_path(client.id) %></td>
    <td><%= link_to '削除する', client_path(client.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    <td><%= link_to '記録を書く', new_client_care_record_path(client.id) %></td>
    <td><%= link_to '介護記録一覧', client_care_records_path(client.id) %></td>
  </tr>
<% end %>
</table>
<%= link_to '利用者様登録', new_client_path %>